<p id="notice"><%= notice %></p>

<h1>Carp Mart</h1>

<h2>Items</h2>

<img src"/images/carp_mart_log.jpg" />

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Picture url</th>
      <th>Description</th>
      <th>Quantity left</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
				<td><%= image_tag(item.picture_url) %></td>
        <td><%= item.description %></td>
        <td><%= item.quantity_left %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

